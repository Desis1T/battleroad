<?php if(Session::has('error')): ?>

    <!-- Error Message -->
    <div class="flash-message alert alert-error">
        <?php if(Session::get('error') instanceof Illuminate\Support\MessageBag): ?>
            <i class="fa fa-warning"></i>
            <ul>
                <?php foreach(Session::get('error')->all() as $error): ?>
                    <li><?php echo e($error); ?></li>
                <?php endforeach; ?>
            </ul>
        <?php else: ?>
            <p><i class="fa fa-warning"></i> <?php echo e(Session::get('error')); ?></p>
        <?php endif; ?>
    </div>
    <!-- Error Message -->

<?php endif; ?>

<?php if(Session::has('message')): ?>

    <!-- Message -->
    <div class="flash-message alert alert-success">
        <p><i class="fa fa-thumbs-up"></i> <?php echo e(Session::get('message')); ?></p>
    </div>
    <!-- Message -->

<?php endif; ?>

<?php if(Session::has('status')): ?>

    <!-- Message -->
    <div class="flash-message alert alert-success">
        <p><i class="fa fa-thumbs-up"></i> <?php echo e(Session::get('status')); ?></p>
    </div>
    <!-- Message -->

<?php endif; ?>